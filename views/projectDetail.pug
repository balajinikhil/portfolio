extends base
block content
    link(rel="stylesheet", href="/projectDetail.css")
    .project-detail
        <div class="album py-2 bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 project-sb">
                        //- {{!-- Links --}}
                        <div class="mb-4 ">
                            <h1>Links</h1>
                            <div class="my-2">
                                a(href=project.githubUrl class="btn btn-primary") Github Link
                            </div>
                        </div>
                        <hr />
                        <div>
                            <h1>Resources</h1>
                        each el in project.relatedProjects
                            <div>
                                a(href="#")= el.name
                            </div>
                        </div>
                    </div>

                    <div class="col-md-9">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item"><a href="/projects">Projects</a> </li>
                                 li.breadcrumb-item.active( aria-current="page")=project.name
                            </ol>
                        </nav>
                        h1=project.name
                        p=project.description


                        h2 Live Demo... Give it a try...
                        
                        
                        iframe.project-box(src=`/projects/${project.slug}/index.html` width = "100%" height="70%" frameborder=0)


                    </div>
                </div>
            </div>
        </div>

    