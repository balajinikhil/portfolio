extends dashboard
block content
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
            <h1 class="h2">#{project.name}</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                        a(type="submit" class="btn btn-sm btn-outline-secondary" href=`/admin/delete/${project.slug}`) Delete Project
                </div>
            </div>
        </div>

        <div>
            form(action=`/admin/edit/${project.slug}` method="POST")
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">Name</label>
                        input(type="text" name="name" class="form-control name" id="name" value=`${project.name}`)
                    </div>
                    <div class="form-group col-md-6">
                        <label for="slug">Slug</label>
                        input(type="text" class="form-control slug" name="slug" id="alias" readonly value=`${project.slug}`)
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="github">Github Url</label>
                        input(type="text" name="githubUrl" class="form-control git" id="github" value=`${project.githubUrl}`)
                    </div>

                    <div class="form-group col-md-6">
                        <label for="tag">Tags</label>
                        input(type="text" class="form-control tags" name="tags" id="tag" )
                    </div>
                </div>


                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="description">Description</label>
                        <textarea type="text" name="description" class="form-control description" id="description">#{project.description}</textarea>
                    </div>


                    //-  <div class="form-group col-md-6">
                        <label for="tag">Cover</label>

                            <img src="{{project.image}}" alt="">
                            <a href="#">Change Cover Image</a>

                        <button class="btn btn-primary">Upload Image</button>

                    </div> 
                </div>

                <button type="submit" class="btn btn-primary">Update Project</button>
                
            </form>
            
        </div>

    </main>